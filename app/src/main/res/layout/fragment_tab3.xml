<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainFragment">


    <!-- TODO: RX_TIMER -->

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_thread_start"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"


        android:text="Threads"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:id="@+id/filledTextFieldA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        app:layout_constraintTop_toBottomOf="@id/btn_coroutines_debounce"
        android:hint="Thread experiments">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txt_threads"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="false"
            android:text="@string/app_name"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_coroutines"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"

        android:text="Coroutines"
        app:layout_constraintStart_toEndOf="@+id/btn_thread_start"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_coroutines_debounce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"

        android:text="Debounce"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_thread_start" />

    <EditText
        android:id="@+id/txt_debounce"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/app_name"

        android:layout_margin="12dp"

        app:layout_constraintStart_toStartOf="@id/btn_coroutines"
        app:layout_constraintTop_toBottomOf="@id/btn_coroutines"/>


</androidx.constraintlayout.widget.ConstraintLayout>